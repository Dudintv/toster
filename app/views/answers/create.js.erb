<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message|%>
    $('#new-answer-form').find('.form-answer-errors').append('<p class="alert alert-danger"><%= j message %></p>');
  <% end %>
<% else %>
  <% if remotipart_submitted? %>
    $('#answers').append('<%= j "#{render @answer}" %>');
  <% else %>
    $('#answers').append('<%= j render @answer %>');
  <% end %>
  
  $('#answer_body').val('');
  $('#form-answer-errors').empty();
<% end %>
